<% header 'Sign up' %>

<%= semantic_form_for(resource, :url => registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>

  <%= form.input :name %>
  <%= form.input :email %>
  <%= form.input :password %>
  <%= form.input :password_confirmation %>
  <%= form.commit_button :label => "Sign Up" %>

<% end %>

<%= render :partial => "devise/shared/links" %>
