<%= semantic_form_for resource do |form| %>

  <%= form.input :name, :label => "Title" %>
  <%= form.input :start_date, :input_html => { :class => "date-field" } %>
  <%= timefield(form,resource,:start_time) %>
  <%= form.input :end_date, :input_html => { :class => "date-field" } %>
  <%= timefield(form,resource,:end_time) %>
  <%= form.input :description, :as => :text %>
  <%= form.input :user_id, :as => :hidden, :value => current_user.id %>

  <%= form.inputs :name => "Address", :for => :address do |f| %>
    <%= f.input :street1, :label => "Street" %>
    <%= f.input :street2, :label => nil %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :country %>
    <%= f.input :zip %>
  <% end %>

  <%= form.commit_button :label => "Save" %>

<% end %>
